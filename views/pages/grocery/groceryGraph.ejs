<html>
<head>
<title>Grocery Spending</title>
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes" charset="utf-8">
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
</head>
<body class="container">
<main>
		<!-- views/map-access-chart.ejs -->
		<canvas id="myChart" width="100%" height="100%"></canvas>
		<div>

		<script id ="map-popularity" type="text/javascript">
			var ctx = document.getElementById("myChart").getContext("2d");
			var myChart = new Chart(ctx, {
			type: 'bar',
			data: {
				labels: <%- JSON.stringify(date) %>,
				datasets: [{
					label: 'Grocery Spending',
					data: <%- JSON.stringify(data) %>
				}]
			},
			options: {
				scales: {
					yAxes: [{
						ticks: {
							beginAtZero: true
						}
					}]
				},
				responsive: true,
				maintainAspectRatio: false,
			}
		});
		</script>
		</div>
</main>
<style>
	body {
		background-color: #fcfcd6;
	}
	main {
		padding-top: 100px;
	}
	.submit {
		padding-top: 40px;
	}
</style>
</html>

